{
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "declarationMap": true,
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true
    // "types": ["node", "jest", "ts-jest", "ts-node"]
  },
  "ts-node": {
    "esm": true
  }
}