{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "watch": {
      "dependsOn": ["^watch"],
      "outputs": ["dist/**"]
    },
    "@gloo-ai/baml-schema-wasm#build": {
      "dependsOn": ["^build"],
      "inputs": ["../../engine/**/*.rs", "../../engine/**/*.toml"],
      "outputs": ["dist/**"]
    },
    "@gloo-ai/web-panel#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@gloo-ai/baml-language-server#build": {
      "dependsOn": ["@gloo-ai/baml-schema-wasm#build"],
      "outputs": ["out/**"],
      "cache": false
    },
    "baml-client": {
      "dependsOn": ["@gloo-ai/baml-language-server#build", "@gloo-ai/web-panel#build"],
      "outputs": ["out/**"]
    },
    "lint": {},
    "clean": {},
    "baml-client#build": {
      "dependsOn": ["@gloo-ai/baml-language-server#build"],
      "outputs": ["out/**"]
    },
    "baml#vscode:package": {
      "dependsOn": ["baml-client#build"],
      "outputs": ["baml-*.vsix"]
    },
    "package": {
      "dependsOn": ["baml#vscode:package"]
    }
  }
}
