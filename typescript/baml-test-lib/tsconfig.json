{
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declarationMap": true,
    "target": "ES2021",

    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true
    // "types": ["node", "jest", "ts-jest", "ts-node"]
  },
  "ts-node": {
    "esm": true
  }
}
