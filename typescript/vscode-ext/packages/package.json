{
  "name": "baml",
  "displayName": "Baml",
  "description": "BAML is a DSL for AI applications.",
  "version": "0.2.1",
  "publisher": "Gloo",
  "repository": "https://github.com/GlooHQ/gloo-lang",
  "homepage": "https://trygloo.com",
  "icon": "baml-logo.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:baml"
  ],
  "main": "./vscode/out/extension.js",
  "contributes": {
    "activationEvents": [
      "onLanguage:baml"
    ],
    "configuration": {
      "type": "object",
      "title": "Baml extension settings",
      "properties": {
        "baml.path": {
          "type": "string",
          "default": "baml",
          "description": "Override the baml CLI path",
          "scope": "resource"
        },
        "baml.fileWatcher": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Enable, when checked, the File Watcher functionality for Baml Client."
        },
        "baml.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Setting for logging between the VS Code extension and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "baml",
        "aliases": [
          "Baml",
          "baml"
        ],
        "extensions": [
          ".baml"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./baml-logo.png",
          "dark": "./baml-logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "baml",
        "scopeName": "source.baml",
        "path": "./syntaxes/baml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "baml",
        "path": "./snippets/basicSnippets.json"
      }
    ],
    "commands": [
      {
        "command": "baml.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Baml"
      },
      {
        "command": "baml.openPlayground",
        "title": "Open Playground",
        "category": "Baml"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "title": "Open Playground",
          "when": "resourceLangId == baml",
          "command": "baml.openPlayground",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies",
    "clean": "rimraf baml-*.vsix"
  },
  "dependencies": {
    "env-paths": "2.2.1",
    "minimatch": "6.2.0",
    "vscode-languageclient": "7.0.0",
    "watcher": "1.2.0"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.3",
    "@types/vscode": "1.63.0",
    "@vscode/test-electron": "2.3.5",
    "esbuild": "^0.19.4",
    "is-ci": "3.0.1",
    "mocha": "^10.2.1",
    "ovsx": "0.8.3",
    "typescript": "5.2.2",
    "@vscode/vsce": "2.21.1"
  },
  "preview": true
}
